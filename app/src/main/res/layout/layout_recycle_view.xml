<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_submission"
        android:layout_width="@dimen/width_160"
        android:layout_height="@dimen/height_230"
        android:layout_margin="@dimen/margin_10"
        android:padding="@dimen/padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_52"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_17"
                tools:text="Question Name" />

            <TextView
                android:id="@+id/tv_qCode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_gravity="center"
                android:textSize="@dimen/text_17"
                tools:text="111A" />

            <TextView
                android:id="@+id/tv_tags"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_40"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="tags" />

            <TextView
                android:id="@+id/tv_lang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_15"
                tools:text="Programming Language" />

            <TextView
                android:id="@+id/tv_creation_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_13"
                tools:text="Aug, 2018" />

            <TextView
                android:id="@+id/tv_verdict"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_22"
                android:layout_gravity="center"
                android:textSize="@dimen/text_13"
                tools:text="COMPILATION_ERROR" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20"
                android:layout_gravity="center"
                tools:text="time" />

            <TextView
                android:id="@+id/tv_memory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20"
                android:layout_gravity="center"
                tools:text="memory" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
