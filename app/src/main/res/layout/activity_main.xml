<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.immadisairaj.codeforces.MainActivity">

    <TextView
        android:layout_width="@dimen/width_330"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_110"
        android:gravity="center"
        android:text="@string/enter_handle"
        android:textSize="@dimen/text_25" />

    <EditText
        android:id="@+id/et_handle"
        android:layout_width="@dimen/width_200"
        android:layout_height="@dimen/height_40"
        android:layout_centerInParent="true"
        android:hint="@string/handle" />

    <Button
        android:layout_width="@dimen/width_30"
        android:layout_height="@dimen/height_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_45"
        android:layout_marginRight="@dimen/margin_45"
        android:background="@drawable/next"
        android:onClick="next" />

    <TextView
        android:id="@+id/tv_re_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_150"
        android:text="@string/enter_handle_again"
        android:textSize="@dimen/text_20"
        android:visibility="gone" />

</RelativeLayout>